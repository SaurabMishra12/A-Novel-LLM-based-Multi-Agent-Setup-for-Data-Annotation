UnifiedLegalClassifier = Agent(
    role = "Comprehensive Legal Statement Analyzer and Classifier",
    goal="Analyze the court case:'{case}' and classify the '{sentence}' using information.",
    backstory = "A professional legal annotator of more than 20 years of experience designed for deep analysis and annotation of legal statements.",
    verbose=True,
    allow_delegation=False,
    memory=True,
    llm=my_llm3,
    cache=True
)

UnifiedLegalClassificationTask = Task(
    description = "A multi-stage step by step analysis process with proper reasoning for a sentence to annotate: '{sentence}' from a legal court case:'{case}'. The process involves step-by-step reasoning, analysing facts, ratio decidendi, lower court rulings, precedents, arguments, and statutes to arrive at a final classification. Includes a few shots enhanced prompt with detail description of each role.",
    expected_output = "A single-word legal classification from a predefined list (Facts, Ratio of the decision, etc.).",
    agent = UnifiedLegalClassifier,
    verbose=True,
    shared_memory=True
)
